// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== TELEGRAM BOT TABLES ====================

model ScheduledPost {
  id        String @id @default(uuid())
  chatId    BigInt @map("chat_id")
  videoPath String @map("video_path")
  title     String

  hashtags         String
  scheduledAt      DateTime @map("scheduled_at")
  status           String   @default("pending")
  error            String?
  createdAt        DateTime @default(now()) @map("created_at")
  isRepost         Boolean  @default(false) @map("is_repost")
  telegramFileId   String?  @map("telegram_file_id")
  notificationSent Boolean  @default(false) @map("notification_sent")

  @@index([status])
  @@index([scheduledAt])
  @@map("scheduled_posts")
}

model VideoArchive {
  id        String @id @default(uuid())
  chatId    BigInt @map("chat_id")
  videoPath String @map("video_path")
  title     String

  hashtags     String
  views        Int       @default(0)
  likes        Int       @default(0)
  postedAt     DateTime  @map("posted_at")
  lastRepostAt DateTime? @map("last_repost_at")
  repostCount  Int       @default(0) @map("repost_count")

  @@index([views(sort: Desc)])
  @@map("video_archive")
}

model RepostCycle {
  id          Int      @id @default(autoincrement())
  videoId     String   @map("video_id")
  repostDate  DateTime @map("repost_date")
  cycleNumber Int      @default(1) @map("cycle_number")

  @@map("repost_cycle")
}

model Setting {
  key   String  @id
  value String?

  @@map("settings")
}

model DownloadedVideo {
  fileId       String   @id @map("file_id")
  chatId       BigInt   @map("chat_id")
  videoPath    String   @map("video_path")
  fileSize     Int?     @map("file_size")
  downloadedAt DateTime @default(now()) @map("downloaded_at")
  status       String   @default("pending")

  @@index([chatId])
  @@map("downloaded_videos")
}

model User {
  telegramId   BigInt   @id @map("telegram_id")
  username     String?
  firstName    String   @map("first_name")
  lastName     String?  @map("last_name")
  role         String   @default("user")
  createdAt    DateTime @default(now()) @map("created_at")
  lastActiveAt DateTime @default(now()) @map("last_active_at")

  @@index([telegramId])
  @@map("users")
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  telegramId BigInt   @map("telegram_id")
  action     String // upload, edit, delete, reschedule, view_queue, view_videos, etc.
  targetId   String?  @map("target_id") // postId nếu có
  details    String? // Chi tiết action
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([telegramId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
