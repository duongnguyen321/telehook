// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ==================== TELEGRAM BOT COLLECTIONS ====================

model ScheduledPost {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  chatId                 BigInt   @map("chat_id")
  videoPath              String   @map("video_path")
  title                  String
  hashtags               String
  scheduledAt            DateTime @map("scheduled_at")
  status                 String   @default("pending")
  error                  String?
  createdAt              DateTime @default(now()) @map("created_at")
  isRepost               Boolean  @default(false) @map("is_repost")
  telegramFileId         String?  @map("telegram_file_id")
  notificationSent       Boolean  @default(false) @map("notification_sent")
  notificationMessageIds String[] @default([]) @map("notification_message_ids")
  // For duplicate detection
  duration               Float?   @map("duration")
  fileSize               Int?     @map("file_size")

  @@index([status])
  @@index([scheduledAt])
  @@map("scheduled_posts")
}

model VideoArchive {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  chatId       BigInt    @map("chat_id")
  videoPath    String    @map("video_path")
  title        String
  hashtags     String
  views        Int       @default(0)
  likes        Int       @default(0)
  postedAt     DateTime  @map("posted_at")
  lastRepostAt DateTime? @map("last_repost_at")
  repostCount  Int       @default(0) @map("repost_count")

  @@index([views(sort: Desc)])
  @@map("video_archive")
}

model RepostCycle {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  videoId     String   @map("video_id")
  repostDate  DateTime @map("repost_date")
  cycleNumber Int      @default(1) @map("cycle_number")

  @@map("repost_cycle")
}

model Setting {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  key   String  @unique
  value String?

  @@map("settings")
}

model DownloadedVideo {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  fileId       String   @unique @map("file_id")
  chatId       BigInt   @map("chat_id")
  videoPath    String   @map("video_path")
  fileSize     Int?     @map("file_size")
  downloadedAt DateTime @default(now()) @map("downloaded_at")
  status       String   @default("pending")

  @@index([chatId])
  @@map("downloaded_videos")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId   BigInt   @unique @map("telegram_id")
  username     String?
  firstName    String   @map("first_name")
  lastName     String?  @map("last_name")
  role         String   @default("user")
  isBlocked    Boolean  @default(false) @map("is_blocked")
  createdAt    DateTime @default(now()) @map("created_at")
  lastActiveAt DateTime @default(now()) @map("last_active_at")

  @@map("users")
}

model AuditLog {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId BigInt   @map("telegram_id")
  action     String
  targetId   String?  @map("target_id")
  details    String?
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([telegramId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// ==================== BROADCAST SYSTEM ====================

// Variable lưu trữ các biến động có thể dùng trong broadcast
model BroadcastVariable {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique // e.g., "tiktok_link", "admin_contact"
  value       String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("broadcast_variables")
}

// Template cho broadcast message
model BroadcastTemplate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   // Tên template
  title     String   // Tiêu đề (hỗ trợ variable)
  content   String   // Nội dung (hỗ trợ variable, markdown)
  mediaUrl  String?  @map("media_url") // URL ảnh/video trên S3
  mediaType String?  @map("media_type") // 'image' | 'video'
  buttons   Json?    // Array of { text, type: 'link'|'copy'|'callback', value }
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  messages BroadcastMessage[]

  @@map("broadcast_templates")
}

// Message đã gửi (để edit sau này)
model BroadcastMessage {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  templateId     String   @map("template_id") @db.ObjectId
  targetRole     String   @map("target_role") // 'user'|'mod'|'reviewer'|'all'
  sentAt         DateTime @default(now()) @map("sent_at")
  sentBy         BigInt   @map("sent_by") // Admin telegram ID
  messageRecords Json     // Array of { chatId, messageId } for edit
  status         String   @default("sent") // 'sent'|'edited'|'failed'

  template BroadcastTemplate @relation(fields: [templateId], references: [id])

  @@index([templateId])
  @@map("broadcast_messages")
}

// Lưu tin nhắn từ user để admin reply
model UserChat {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  BigInt   @map("telegram_id")
  username    String?
  firstName   String   @map("first_name")
  messageText String?  @map("message_text")
  mediaUrl    String?  @map("media_url")
  mediaType   String?  @map("media_type")
  replyTo     String?  @map("reply_to") @db.ObjectId // ID của message admin reply
  replyText   String?  @map("reply_text")
  isRead      Boolean  @default(false) @map("is_read")
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([telegramId])
  @@index([isRead])
  @@map("user_chats")
}
